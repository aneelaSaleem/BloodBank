@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">  
  <div class="row-fluid">  
    <div class="span12 offset4" >  
      
        <h2>Retreive Password</h2>
        <h2>Please Provide following information</h2>
        <form method="post" id="getPassword" onsubmit="return getPassword()">
            <label>User Name</label>
            <input type="text" name="username" id="username" />
            <label>Email</label>
            <input type="email" name="email" id="email"/><br />
            <span id="errors"></span>
            <input type="submit" class="btn btn-primary" value="Submit"/>
        </form>
    </div>  
  </div>  
</div> 
<script>
    function getPassword() {

        var uname = $('#username').val();
        var mail = $('#email').val();
        var text = "<ul>";
        if (uname.length == 0)
            text += "<li>Please Enter user name</li>";
        if (mail.length == 0)
            text += "<li>Please Enter Email Address</li></ul>";
        $('#errors').html(text);
        if (text.length > 5) {
            $('#errors').css('color', 'red');
            return false;
        }
        $.ajax({
            type: 'POST',
            url: '/home/GetPassword', data: $('#getPassword').serialize(),
            success: function (x) {
                $('#errors').css('color','blue');
                $('#errors').text(x);
                $('#errors').append('<br/>');
            },
            error: function (x) {
                $('#errors').css('color', 'red');
                $('#errors').text(x);
                $('#errors').append('<br/>');
            }
        })
        return false;
    }
</script>